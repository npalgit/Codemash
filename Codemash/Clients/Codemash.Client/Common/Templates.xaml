<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="sessionItemTemplate">
        <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock Text="{Binding Display}" TextWrapping="Wrap" FontFamily="Segoe UI" Foreground="#ff555555"
                       FontSize="20" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="sessionGroupItemTemplate">
        <Border BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,2" Padding="7" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock Text="{Binding Display}" Style="{StaticResource GroupTitle}" HorizontalAlignment="Left" VerticalAlignment="Center"
                       TextTrimming="WordEllipsis" />
        </Border>
    </DataTemplate>

</ResourceDictionary>
